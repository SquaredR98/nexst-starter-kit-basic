# Database Configuration
# Central database for platform management and tenant registry
CENTRAL_DATABASE_URL="postgresql://username:password@localhost:5432/erp_central"

# Tenant database template (used for new tenant setup)
TENANT_DATABASE_URL="postgresql://username:password@localhost:5432/tenant_template"

# Legacy database URL (for backward compatibility)
DATABASE_URL="postgresql://username:password@localhost:5432/erp_system"

# Tenant database encryption key (32 characters minimum)
TENANT_ENCRYPTION_KEY="your-32-character-secret-key-here-12345"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-here"

# Application Configuration
APP_ENV="development"
APP_NAME="ERP System"
APP_URL="http://localhost:3000"

# Deployment Configuration
DEPLOYMENT_TYPE="cloud" # or "onpremise"

# License Validation (for on-premise)
LICENSE_PUBLIC_KEY="your-license-public-key-here"
LICENSE_DATA="your-base64-encoded-license-data"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# File Storage Configuration
STORAGE_TYPE="local" # or "s3", "gcp", "azure"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket"

# Payment Gateway (Razorpay for India)
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"

# Redis Configuration (for sessions and cache)
REDIS_URL="redis://localhost:6379"

# Monitoring & Analytics
SENTRY_DSN="your-sentry-dsn"
GOOGLE_ANALYTICS_ID="your-ga-id"

# Feature Flags
ENABLE_AUDIT_LOGGING="true"
ENABLE_SUBSCRIPTION_CHECKS="true"
ENABLE_MULTI_TENANCY="true" 