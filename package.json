{
  "name": "auth-starter-kit",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "backend:dev": "pnpm --filter @auth-kit/backend dev",
    "backend:build": "pnpm --filter @auth-kit/backend build",
    "web:dev": "pnpm --filter @auth-kit/web dev",
    "web:build": "pnpm --filter @auth-kit/web build",
    "db:migrate": "pnpm --filter @auth-kit/backend migration:run",
    "db:generate": "pnpm --filter @auth-kit/backend migration:generate",
    "db:seed": "pnpm --filter @auth-kit/backend seed"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.3",
    "prettier": "^3.4.2",
    "eslint": "^9.18.0"
  },
  "packageManager": "pnpm@9.15.2",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
