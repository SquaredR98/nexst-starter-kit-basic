{
  "name": "erp-system",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run db:generate && next dev --turbopack",
    "dev:clean": "npm run db:generate && npm run build:css && next dev --turbopack",
    "build": "npm run db:generate && next build",
    "start": "next start",
    "lint": "next lint",
    "setup": "node scripts/dev-setup.js",
    "db:generate": "prisma generate --schema=prisma/schemas/central.prisma && prisma generate --schema=prisma/schemas/tenant.prisma",
    "db:generate:central": "prisma generate --schema=prisma/schemas/central.prisma",
    "db:generate:tenant": "prisma generate --schema=prisma/schemas/tenant.prisma",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:studio:central": "prisma studio --schema=prisma/schemas/central.prisma",
    "db:studio:tenant": "prisma studio --schema=prisma/schemas/tenant.prisma",
    "build:css": "echo 'CSS build step - placeholder for future custom build steps'",
    "validate": "npm run db:generate && npm run lint",
    "postinstall": "npm run db:generate"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@hookform/resolvers": "^3.10.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@tanstack/react-query": "^5.81.5",
    "@tanstack/react-table": "^8.21.3",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "jose": "^5.9.4",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.456.0",
    "next": "15.3.4",
    "next-auth": "^4.24.7",
    "nodemailer": "^6.10.1",
    "prisma": "^5.22.0",
    "react": "^19.0.0",
    "react-color": "^2.19.3",
    "react-dom": "^19.0.0",
    "react-grid-layout": "^1.5.2",
    "react-hook-form": "^7.59.0",
    "react-hot-toast": "^2.4.1",
    "recharts": "^2.15.4",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.0.3",
    "zod": "^3.23.8",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
