{
  "name": "auth-starter-kit",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "backend:dev": "pnpm --filter @auth-kit/backend dev",
    "backend:build": "pnpm --filter @auth-kit/backend build",
    "web:dev": "pnpm --filter @auth-kit/web dev",
    "web:build": "pnpm --filter @auth-kit/web build",
    "db:migrate": "pnpm --filter @auth-kit/backend migration:run",
    "db:generate": "pnpm --filter @auth-kit/backend migration:generate",
    "db:seed": "pnpm --filter @auth-kit/backend seed"
  },
  "devDependencies": {
    "@types/js-cookie": "^3.0.6",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@9.15.2",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "js-cookie": "^3.0.5",
    "qrcode.react": "^4.2.0",
    "react-hook-form": "^7.71.1",
    "react-hot-toast": "^2.6.0",
    "zod": "^4.3.5"
  }
}
